from PyQt5.QtCore import Qt
from PyQt5.QtWidgets import QApplication, QWidget, QPushButton, QLabel, QVBoxLayout, QHBoxLayout

app = QApplication([])
window = QWidget()
window.show()
window.setWindowTitle('Виселица')
window.resize(600, 700)

start_button = QPushButton('Новая игра')
exit_button = QPushButton('Выход')
continue_button = QPushButton('Продолжить')
highscore_button = QPushButton('Рекорды')

h_line1 = QHBoxLayout()
h_line2 = QHBoxLayout()
h_line3 = QHBoxLayout()
h_line4 = QHBoxLayout()
v_line1 = QVBoxLayout()
h_line1.addWidget(start_button, alignment = Qt.AlignCenter)
h_line2.addWidget(continue_button, alignment = Qt.AlignCenter)
h_line3.addWidget(highscore_button, alignment = Qt.AlignCenter)
h_line4.addWidget(exit_button, alignment = Qt.AlignCenter)
v_line1.addLayout(h_line1)
v_line1.addLayout(h_line2)
v_line1.addLayout(h_line3)
v_line1.addLayout(h_line4)
window.setLayout(v_line1)
















app.exec_()
